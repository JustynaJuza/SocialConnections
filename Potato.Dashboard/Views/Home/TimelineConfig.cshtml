@model SocialDashboard.Models.TimelineConfigViewModel
@using SocialDashboard.Models;

@{
    ViewBag.Title = "Configure Twitter Providers Timeline";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Timeline (ID: @Model.Id)</h2>

<table>
    <tr>
        <td>ID: @Html.DisplayFor(m => m.Id) | </td>
        <td>Name: @Html.EditorFor(m => m.Name) | </td>
        <td>Merge all activity: @Html.EditorFor(m => m.MergedTimeline)</td>
        <td>
            @Html.ActionLink("Update", "Update", Model.Id, new { @class = "btn btn-default" })
    </td>
</tr>
</table>
<hr />
